<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/event_post_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/event_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/event_post_image"
        android:text="event_post"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/event_post_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/event_post_image"
        android:layout_alignLeft="@+id/event_post_name"
        android:text="Description" />

    <TextView
        android:id="@+id/event_post_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>